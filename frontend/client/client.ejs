<html>
  <!--<![endif]-->
  <head>
    <title>Twitter Radio</title>

    <!-- Meta -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <link rel="stylesheet" href="/frontend/client/static/twitter.css" />
  </head>

  <body>
    <script type="text/javascript">
      App = {};
      App.allHashtags = <%- allHashtags %>;
      App.ioPort = <%= _ioPort %>;
      App.ioUrl = "http://" + window.location.hostname + ":" + App.ioPort.toString() + "/client";
    </script>
    <div class="lines">
    	<% for(var i = 0, ilen = App.allHashtags.length; i < ilen; i++ ) { %>
      	<div class="line" dataTagId="<%= App.allHashtags[i].id %>" id="line<%= i + 1 %>"></div>
      <% } %>
    </div>

    <div class="channels">
    	<% const aPosStep = 100 / App.allHashtags.length;  %>
    	<% for(var i = 0, ilen = App.allHashtags.length; i < ilen; i++ ) { %>
      	<input type="text" maxlength="15" placeholder="<%= App.allHashtags[i].hashtag %>" style="left:<%= aPosStep*(i+0.5) %>;" class="channel" dataTagId="<%= App.allHashtags[i].id %>" id="channel<%= i + 1 %>" />
      <% } %>
    </div>

    <div id="indicator"></div>

    <script type="text/javascript" src="/frontend/sharedstuff/static/jquery-2.0.3.min.js"></script>
    <script type="text/javascript" src="/frontend/sharedstuff/static/socket.io-client-0.9/dist/socket.io.js"></script>
    <!--[if lt IE 8]><script type="text/javascript" src="theme/scripts/json2.js"></script><![endif]-->
    <script type="text/javascript" src="/frontend/client/static/client.main.js"></script>
  </body>
</html>

